# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-min-32-characters-long

# Firebase Configuration
# Option 1: Use service account file path (recommended for local development)
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-service-account.json
# Option 2: Use JSON string (recommended for production/Render.com)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"flight-exporter",...}

# ArcGIS Credentials (Legacy - these will be removed when all users have registered)
# These are fallback credentials when user doesn't provide their own
GIS_AUTH_USERNAME=your_gis_auth_username
GIS_AUTH_PASSWORD=your_gis_auth_password
GIS_USERNAME=your_gis_username
GIS_PASSWORD=your_gis_password

# ArcGIS Configuration URLs
# These URLs point to your ArcGIS server endpoints
ARCGIS_BASE_URL=https://maps.sinarmasforestry.com/arcgis/rest/services/PreFo/DroneSprayingVendor/FeatureServer/0
ARCGIS_SERVER_URL=https://maps.sinarmasforestry.com/arcgis/rest/services/PreFo/DroneSprayingVendor/MapServer
ARCGIS_TOKEN_URL=https://maps.sinarmasforestry.com/portal/sharing/rest/generateToken
ARCGIS_UPLOAD_URL=https://maps.sinarmasforestry.com/portal/sharing/rest/content/features/generate
ARCGIS_REFERER=https://maps.sinarmasforestry.com/UploadDroneManagements/
